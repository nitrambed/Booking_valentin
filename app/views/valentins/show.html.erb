<!-- Card d'un Valentin -->
<div class="container my-5 justify-content-center">
  <h2 class="text-center my-5">Votre Val'</h2>
  <div class="row my-3 justify-content-center">
    <div class="col-12" class="text-center justify-content-center">
        <ul class="list-group shadow text-center d-flex justify-content-center">
          <h3><%= @valentin.name %></h3>
          <div class="d-flex justify-content-center">
            <%= cl_image_tag @valentin.photo.key, height: 200, width:300, crop: :fill %>
          </div>
          <p><%= @valentin.short_description %></p>
          <p><%= @valentin.long_description %></p>
          <p class="card-val--price"><%= @valentin.price %>â‚¬</p>
        </ul>
    </div>
  </div>
</div>

<!-- Reviews de Valentins -->
<div class="container my-5">
  <h2 class="text-center my-5">Les commentaires duVal'</h2>
  <div class="row my-3">
    <ul class="list-group">
      <% @valentin.reviews.each do |review| %>
        <li class="list-group-item"><%= review.comment %></li>
        <li class="list-group-item">
          <%= review.comment %>
          <%= link_to "Remove",
                      review_path(review),
                      method: :delete,
                      data: { confirm: "Are you sure?" } %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
